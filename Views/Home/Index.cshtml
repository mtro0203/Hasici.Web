        <p>@Html.Raw(Model.Preview)</p>



        <ul class="actions">
            <li><a asp-controller="Articles" asp-action="Details" asp-route-id="@Model.Id" class="button big">Čítať ďalej</a></li>
        </ul>


    </div>
    <a href="#" class="image"><img src="images/pic01.jpg" alt="" /></a>
</section>


<hr />

