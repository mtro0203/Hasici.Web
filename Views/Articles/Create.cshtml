@model Hasici.Web.Article



@section scripts
    {
    <script src="https://cloud.tinymce.com/stable/tinymce.min.js"></script>
    <script src="@Url.Content("~/assets/js/initTinyMCE().js")"></script>
}


<div class="row">
    <div class="col-12">
        <form asp-action="Create">


            <!--Input for title-->
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>

            <!--Textarea for content-->
            <div class="form-group">
                <label asp-for="Content" class="control-label"></label>
                <textarea asp-for="Content" rows="15" placeholder="Môžete začať písat..."></textarea>
                <span asp-validation-for="Content" class="text-danger"></span>
            </div>

            <!--Chekbox, to be published -->
            <div class="form-control">

                @Html.CheckBoxFor(m => m.Publised)
                <label for="Publised">Publikovať</label>
            </div>

            <!--"Save" button-->
            <div class="form-group">
                <input type="submit" value="Vytvoriť" class="button primary" />
            </div>
        </form>
    </div>
</div>


<!--"Back" button -->
<div>
    <a asp-action="Index">Späť</a>
</div>

