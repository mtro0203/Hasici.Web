@model Hasici.Web.Article


@section scripts
    {
    <script src="https://cloud.tinymce.com/stable/tinymce.min.js"></script>
    <script src="@Url.Content("~/assets/js/initTinyMCE().js")"></script>
}

<h2>@ViewData["Title"]</h2>
<hr />
<div class="row">
    <div class="col-12">
        <form asp-action="Edit">

            <!--Input for title-->
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>

            <!--Textarea for content-->
            <div class="form-group">
                <label asp-for="Content" class="control-label"></label>
                <textarea asp-for="Content" rows="15" placeholder="Môžete začať písat..."></textarea>
                <span asp-validation-for="Content" class="text-danger"></span>
            </div>

            <!--Chekbox, checked to be puslished-->
            <div class="form-control">

                @Html.CheckBoxFor(m => m.Publised)
                <label for="Publised">Publikovať</label>
            </div>
                                   
            <!--"Save" button-->
            <div class="form-group">
                <input type="submit" value="Save" class="button primary" />
            </div>
        </form>
    </div>
</div>


<!--"Back" button-->
<div>
    <a asp-action="Index">Back to List</a>
</div>
