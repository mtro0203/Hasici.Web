@model IEnumerable<ApplicationUser>

@{
    ViewData["Title"] = "Používatelia";
}


<h2>Používatelia</h2>

<table class="table-wrapper">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.RealName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
        </tr>
    </thead>
    <tbody>

        <!-- Displayed users -->
        @foreach (var user in Model)
        {

            <tr>
                <td>
                    <a>@user.RealName</a>
                </td>
                <td>
                    @user.Email
                </td>

                <!-- Actions for the each user-->
                <td>
                    <a asp-action="Profile" asp-route-id="@user.Id" class="button">Zobraziť profil a roly</a>
                    <a asp-action="Delete" asp-route-id="@user.Id" class="button">Odstrániť používateľa</a>
                </td>
            </tr>
        }
    </tbody>
</table>