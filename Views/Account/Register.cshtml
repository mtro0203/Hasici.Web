@model RegisterViewModel

@{
    ViewData["Title"] = "Registrácia";
}


<h3>Registrácia</h3>

<form asp-route-returnurl="@ViewData["returnUrl"]" method="post">

    <div class="row gtr-uniform">

        <div asp-validation-summary="All" class="text-danger col-12"></div>
        <div class="col-6 col-12-xsmall">
            <input asp-for="FirstName" placeholder="@Html.DisplayNameFor(model => model.FirstName)" />
            <span asp-validation-for="FirstName" class="text-danger"></span>
        </div>

        <div class="col-6 col-12-xsmall">
            <input asp-for="LastName" placeholder="@Html.DisplayNameFor(model => model.LastName)" />
            <span asp-validation-for="LastName" class="text-danger"></span>
        </div>

        <div class="col-12">
            <select asp-for="Sex" asp-items="Model.Sexs"></select>
        </div>

        <div class="col-12">
            <input asp-for="Email" placeholder="@Html.DisplayNameFor(model => model.Email)" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <div class="col-6 col-12-xsmall">
            <input asp-for="Password" placeholder="@Html.DisplayNameFor(model => model.Password)" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>

        <div class="col-6 col-12-xsmall">
            <input asp-for="Password2" placeholder="@Html.DisplayNameFor(model => model.Password2)" />
            <span asp-validation-for="Password2" class="text-danger"></span>
        </div>

        <div class="col-12">
            <ul class="actions">
                <li><input type="submit" value="Registrovať sa" class="primary"></li>
            </ul>
        </div>
    </div>
</form>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}