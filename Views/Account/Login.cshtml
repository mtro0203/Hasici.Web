@model LoginViewModel

@{
    ViewData["Title"] = "Prihlásenie";
}


<form asp-action="Login" method="post">
    <div class="row gtr-uniform">


        <div asp-validation-summary="All" class="text-danger col-12"></div>
        <div class="col-6 col-12-xsmall">
            <input asp-for="Email" placeholder="@Html.DisplayNameFor(model => model.Email)" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <div class="col-6 col-12-xsmall">
            <input asp-for="Password" placeholder="@Html.DisplayNameFor(model => model.Password)" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>

        <div class="col-12">
            <ul class="actions">
                <li><input type="submit" value="Prihlásiť sa" class="primary"></li>
                <li><a asp-controller="Account" asp-action="Register" class="button">Registrovať sa</a></li>
            </ul>
        </div>
    </div>
</form>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}