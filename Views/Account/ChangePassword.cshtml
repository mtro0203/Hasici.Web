@model ChangePasswordViewModel
@{
    ViewData["Title"] = "Zmena hesla";
}

<form asp-action="ChangePassword" method="post">
    <div class="row gtr-uniform">


        <div asp-validation-summary="All" class="text-danger col-12"></div>
        <div class="col-4 col-12-xsmall">
            <input asp-for="OldPassword" placeholder="@Html.DisplayNameFor(model => model.OldPassword)" />
        </div>

        <div class="col-4 col-12-xsmall">
            <input asp-for="NewPassword" placeholder="@Html.DisplayNameFor(model => model.NewPassword)" />
        </div>

        <div class="col-4 col-12-xsmall">
            <input asp-for="NewPassword2" placeholder="@Html.DisplayNameFor(model => model.NewPassword2)" />
        </div>

        @if (ViewData["result"] != null)
        {
            <div class="col-12">
                <label>@ViewData["result"]</label>
            </div>
        }


        <div class="col-12">
            <ul class="actions">
                <li><input type="submit" value="Zmeniť heslo" class="primary"></li>                
            </ul>
        </div>
    </div>
</form>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}